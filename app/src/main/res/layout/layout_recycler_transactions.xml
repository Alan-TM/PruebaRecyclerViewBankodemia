<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_transactions_recycler"
    android:padding="16dp">

    <TextView
        android:id="@+id/concepto_transaction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Fondeo Bienvenida"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/cantidad_transaction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hora_transaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7:18 pm"
        app:layout_constraintStart_toStartOf="@id/concepto_transaction"
        app:layout_constraintTop_toBottomOf="@id/concepto_transaction"
        />

    <TextView
        android:id="@+id/cantidad_transaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ $100.00"
        android:textColor="@color/teal_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/concepto_transaction"
        />

</androidx.constraintlayout.widget.ConstraintLayout>